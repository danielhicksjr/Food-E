

<% @posts.each_slice(4) do |row| %>
    <div class="row">
        <% row.each do |post| %>
            <div class="col-md-3">
                <div class="card">
                    <%= link_to(post_path(post.id), {class: "grid-image-link"}) do %>
                        <%= image_tag(post.image, { class: "card-img-top" }) %>
                    <% end %>
                </div> 
            </div>
        <% end %>
    </div>
<% end %>


