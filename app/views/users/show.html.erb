
<% if @user == current_user %>
<%= link_to "Add New Post", new_post_path %>
<% end %>


<% @user.posts.each do |post| %>
    <div class="col-md-3">
        <div class="card">
            <%= link_to(post_path(post.id)) do %>
                <%= image_tag(post.image, { class: "card-img-top" }) %>
                <%= post.title %>
                <%= post.body %>
            <% end %>
        </div> 
    </div>
<% end %>
